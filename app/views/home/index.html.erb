<h1>Home</h1>

<%= render 'welcome' %>

<h1>Listing all Posts</h1><table>
 <tr>
  <th>Title</th>
  <th>Description</th>
  <th>Date</th>
  <th>Author</th>
 </tr>
 <% if @posts.any? %>
   <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.description %></td>
      <td><%= post.created_at.strftime("%d/%m/%Y %I:%M:%S") %></td>
      <td><%= post.user.email %></td>
    </tr>
   <% end %>
 <% else %>
    <p>Você ainda não criou nenhum post.</p>
 <% end %>
</table>

<%= build_pagination @posts %>  <!-- helper created -->