<%= form_tag import_txt_posts_path, multipart: true do %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="row">
    <div class="col-sm">
      <p>
        Selecione o arquivo para importar
      </p>
    </div>
  </div>

  <div class="row">
    <div class="col-sm">
      <div class="form-group">
        <%= file_field_tag 'arquivo', :required => true  %>
        <small id="emailHelp" class="form-text text-muted">Extens√£o permitida .txt</small>
      </div>
      <%= submit_tag 'Importar', class: 'btn btn-info' %>
    </div>
  </div>
<% end %>